<%= form_with(model: [timesheet, line_item]) do |form| %>
  <%= form.label :start_date %>
  <%= form.select :start_date, options_for_select(line_item.available_dates) %>
  <%= form.label :weekday %>
  <%= form.select :weekday, options_for_select(LineItem.weekdays) %>
  <%= form.label :description %>
  <%= form.text_field :description %>
  <%= form.label :start_time, "Start time" %>
  <%= form.time_field :start_time %>
  <%= form.label :end_time, "End time" %>
  <%= form.time_field :end_time %>
  <%= form.label :hourly_rate, "Hourly rate" %>
  <%= form.number_field :hourly_rate %>

  <%= form.submit "Save"%>
<% end %>